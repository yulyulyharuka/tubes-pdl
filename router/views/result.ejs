    <link rel="stylesheet" type="text/css" media="screen" href="main.css">
</head>
<body>
    <%- include navigation.ejs %>
    <div class="jumbotron text-center">
        <h1>Operation to Temporal Database</h1>
    </div>
    <div>
        <ul>
            <p>Select Operation</p>
            <p>Insert Operation</p>
            <p>Update Operation</p>
        </ul>
        <p id="data"></p>
    </div>
</body>
    <script language="javascript" type="text/javascript">
        function getData(){
            let data = document.getElementById('data').innerHTML;
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function() {
                if (this.readyState === 4 && this.status === 200) {
                    var json = JSON.parse(this.responseText);
                    if (json.status == 400){
                        document.getElementById('data').innerHTML = "query error";
                    } else {
                        document.getElementById('data').innerHTML = JSON.stringify(json.values.rows[0].name);
                    }
                }
            };
            xhttp.open("GET", "http://localhost:3000/data", true);
            xhttp.send();
        }
        getData();
    </script>
</html>